extends base.pug

block style
    style
      include ../static/style.css

block content
    section#introSection
        div Welcome to the world of BGMI
        .small  Eat Sleep Play Repeat

    section#missionSection
        h2 Our Mission 
        div.card
            h3 Game Perfection 
            div.card-box 
                div.card-img 
                    img(src="/static/img/1.png")
                div.card-content 
                    p This is the best gaming academy around you.
        div.card
            h3 Aim:Competitive
            div.card-box 
                div.card-img 
                    img(src="/static/img/2.png")
                div.card-content 
                    p Aiming at professional competitive gaming.
        div.card
            h3 Unity and Togetherness
            div.card-box 
                div.card-img 
                    img(src="/static/img/3.jpg")
                div.card-content 
                    p Team work is a perfect way to positive result.

    section#sponsorsSection 
        h2 Our Sponsors 
        div#sponsors
            img(src="/static/img/logo1.png",alt="Sponsor Image",Class="spImage")
            img(src="/static/img/logo2.png",alt="Sponsor Image",Class="spImage")
            img(src="/static/img/logo3.jpg",alt="Sponsor Image",Class="spImage")

